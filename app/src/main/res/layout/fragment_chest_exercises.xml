<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.categories.CategoriesFragment"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- AppBarLayout med Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00A45050"
            app:titleTextColor="@android:color/black">
        </androidx.appcompat.widget.Toolbar>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/arms_cardview"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="20dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="#CDF3AF"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/image_pushups"
                    android:src="@drawable/pushups1"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    />

                <TextView
                    android:id="@+id/tv_pushups"
                    android:text="Push-ups"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/arrow_arms"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/legs_cardview"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="20dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="#CFFFA7"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/image_widepushups"
                    android:src="@drawable/widepushups2"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    />

                <TextView
                    android:id="@+id/tv_widepushups"
                    android:text="Wide Push-ups"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/arrow_legs"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/chest_cardview"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="20dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="#CFFFA7"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/image_burpees"
                    android:src="@drawable/burpees2"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    />

                <TextView
                    android:id="@+id/tv_burpees"
                    android:text="Burpees"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/arrow_chest"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/back_cardview"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="20dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="#CFFFA7"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/image_incline"
                    android:src="@drawable/inclinepushup1"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    />

                <TextView
                    android:id="@+id/tv_incline"
                    android:text="Incline Push-ups"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/arrow_backexercise"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/core_cardview"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="20dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="#CFFFA7"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/image_decline"
                    android:src="@drawable/declinepushup2"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    />

                <TextView
                    android:id="@+id/tv_decline"
                    android:text="Decline Push-ups"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/arrow_core"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>